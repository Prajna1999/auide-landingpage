---
import { Icon } from 'astro-icon';
import Button from './Button.astro'
const navLinks = [
  {
    name: 'Product',
    url: '/',
    style: 'transparent',
  },
  {
    name: 'Pricing',
    url: '#',
    style: 'transparent',
  },
  {
    name: 'About',
    url: '#',
    style: 'transparent',
  },
 
];

---
<nav>
    <div class="container nav-container">
        <div class="logo">
            <Icon name="headphone" />
            <h4 class="h4">Auide</h3>
        </div>
        
        

    <div class="nav-wrapper">
      <button class="btn btn--menu" id="menu-btn" aria-expanded="false" aria-label="Open mobile nav">
        <Icon name="feather:menu" width={25}/>
      </button>
      <ul class="nav-links" role="navigation">
        {navLinks.map(link => (
          <li role="none">
            <a href={link.url} class="btn btn--${link.style} nav-link">{link.name}</a>
          </li>
        ))
        }
        <li role="none">
            <Button text="Join Waitlist" link="https://rpgrzpf2g3c.typeform.com/to/wxi3pUKM" style="secondary"/>
        </li>
      </ul>  
    </div>
    </div>
  </nav>


  <script>
    const navBtn = document.querySelector('#menu-btn');
    navBtn.addEventListener('click', () => {
      navBtn.setAttribute('aria-expanded', navBtn.getAttribute('aria-expanded') === 'false' ? 'true' : 'false');
    })
  </script>

 